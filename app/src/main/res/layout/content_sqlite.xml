<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gauti.testapp.SQLiteActivity"
    tools:showIn="@layout/activity_sqlite">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Here"

        android:id="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/bAdd"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:onClick="addButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/bDelete"
        android:layout_alignBottom="@+id/bAdd"
        android:layout_toRightOf="@+id/bAdd"
        android:layout_toEndOf="@+id/bAdd"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:onClick="deleteButtonClicked"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Displays Here"
        android:id="@+id/tvDisplay"
        android:layout_below="@+id/bAdd"
        android:layout_alignLeft="@+id/bAdd"
        android:layout_alignStart="@+id/bAdd"
        android:layout_marginTop="39dp"
        android:layout_alignRight="@+id/bDelete"
        android:layout_alignEnd="@+id/bDelete" />

</RelativeLayout>
